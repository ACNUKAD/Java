package UserInterface;

import model.CartaoPrePago;
import model.CartaoCashBack;

public class Cartao {
	public static void main(String[] args) {
		
		// PARA CARTÃO PRE PAGO:
		CartaoPrePago c1;
		
		c1 = new CartaoPrePago("1232412331","Ana Carolina", 2020,12,20000);
		
		System.out.println("PARA CARTÃO PRE PAGO");
		System.out.println("Cartão: "+c1.getNumeroCartao()+" Titular: " +c1.getNomeTitular()+" - Validade: " +c1.getAnoValidade()+ "/"+c1.getMesValidade()+" - Saldo: R$ " +c1.getSaldo());
		
		// PARA CREDITAR:		
		c1.adicionarCredito(100);
		System.out.println(" - Novos dados com credito adicionado: ");
		System.out.println("Cartão: "+c1.getNumeroCartao()+" Titular: " +c1.getNomeTitular()+" - Validade: " +c1.getAnoValidade()+ "/"+c1.getMesValidade()+" - Saldo: R$ " +c1.getSaldo());
		System.out.println("-----------------------------------");
		
		//PARA DEBITAR:
		if (c1.comprar(1000)) {
			System.out.println("Compra autorizada");
		}
		else {
			System.out.println("Compra não autorizada, saldo insuficiente");
		}
		System.out.println("Cartão: "+c1.getNumeroCartao()+" Titular: " +c1.getNomeTitular()+" - Validade: " +c1.getAnoValidade()+ "/"+c1.getMesValidade()+" - Novo Saldo: R$ " +c1.getSaldo());
		
		
		// PARA CARTÃO CASHBACK
		
		CartaoCashBack c2;
		
		c2 = new CartaoCashBack("34324234234","Juliana Lais", 2022,06,1000,2);
		
		System.out.println("\n");
		System.out.println("PARA CARTÃO CASHBACK");
		System.out.println("Cartão: "+c2.getNumeroCartao()+" Titular: " +c2.getNomeTitular()+" - Validade: " +c2.getAnoValidade()+ "/"+c2.getMesValidade()+" - Saldo: R$ " +c2.getSaldo()+" - Tipo de cartão: " +c2.getTipoCartao());
		
		if (c2.comprar(500)) {
			System.out.println("Compra autorizada");
		}
		else {
			System.out.println("Saldo insuficiente");
		}
		System.out.println("Cartão: "+c2.getNumeroCartao()+" Titular: " +c2.getNomeTitular()+" - Validade: " +c2.getAnoValidade()+ "/"+c2.getMesValidade()+" - Novo Saldo: R$ " +c2.getSaldo()+" - Tipo de cartão: " +c2.getTipoCartao());
	}

}
